{
  "name": "@sublang/boss",
  "version": "0.2.0",
  "description": "Delegate dev loops to Claude Code + Codex CLI. Iterates for hours. No API keys.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "boss": "bin/boss.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "test": "vitest run tests/unit",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "vitest run",
    "test:watch": "vitest tests/unit",
    "test:coverage": "vitest run --coverage tests/unit"
  },
  "keywords": [
    "cli",
    "claude",
    "codex",
    "development",
    "iteration",
    "ai"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sublang-dev/boss.git"
  },
  "homepage": "https://github.com/sublang-dev/boss#readme",
  "bugs": {
    "url": "https://github.com/sublang-dev/boss/issues"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "smol-toml": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "scaffolding"
  ]
}
